<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#000</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#000</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:textColorHint">@color/colorGreyDark</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.Shadow">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation</item>
    </style>

    <style name="List">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="erv_progressSize">@dimen/base_progress_size_small</item>
        <item name="erv_progressColor">@color/colorAccent</item>
        <item name="erv_textColor">@android:color/white</item>
    </style>

</resources>
